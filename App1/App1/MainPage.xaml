<?xml version="1.0" encoding="utf-8" ?>
    <!--Permite somente 1 componente-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="correioslogo.png" x:Name="imgLogo">
            
        </Image>
        <Entry Placeholder="Digite o cep" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="txtCep"></Entry>
        <Button x:Name="btnBuscar"  Text="BUSCAR CEP" TextColor="White" BackgroundColor="#00416b"></Button>
        
        <!-- Place new controls here -->
        <Label Text="" 
           HorizontalOptions="Center"
           VerticalOptions="Center" x:Name="lblTexto" />
    </StackLayout>
    
    

</ContentPage>
